{% extends 'base.html.twig' %}

{% block title %}Hello ShopController!{% endblock %}

{% block body %}

<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="{{path('homepage')}}">Accueil</a></li>
  <li class="breadcrumb-item"><a href="{{path('app_shop_shop')}}">Boutique</a></li>
</ol>


<div class="container">
	<h1>La boutique</h1>
	<div class="row">
		{# Ma boucle for va générer 3 produits p qui sont dans mon tableau products de homeController #}
		{% for p in products %}
			<div class="col">
				<div
					class="card">
					{# Je passe mon image faker #}
					<img src="{{ p.mainPicture }}" class="img-fluid" alt="Photo d'un produit">
					<div
						class="card-body">
						{# Je passe mon titre et le prix faker #}
						<h4 class="card-title">{{ p.name }}
							{{ p.price /100  }}
							&euro;</h4>

						<span class="badge bg-info badge-info">
							{{ p.category.name }}
						</span>


						{# Je passe ma description faker #}
						<p class="card-taxt">{{ p.shortDescription }}</p>
						
						<a href="{{ path('product_show',{
							'category_slug':p.category.slug,
							'slug' : p.slug
						}) }}" class="btn btn-primary btn-sm">Détails</a>


						<a href="#" class="btn btn-success btn-sm">Ajouter</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<hr>
	<h2>Comment procéder</h2>
	<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Commodi, odit perspiciatis. Ut at quis veniam.</p>
	</div>
	<br>
{% endblock %}