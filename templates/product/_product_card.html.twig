<div
	class="card">
	{# Je passe mon image faker #}
	<img src="{{ p.mainPicture }}" class="img-fluid" alt="Photo d'un produit">
	<div
		class="card-body">
		{# Je passe mon titre et le prix faker #}
		<h4 class="card-title">{{ p.name }}
			{{ p.price /100  }}
			&euro;</h4>

		<span class="badge bg-info badge-info">
			{{ p.category.name }}
		</span>


		{# Je passe ma description faker #}
